{
	"env": {
		"node": true,
		"commonjs": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 2020
	},
	"extends": "eslint:recommended",
	"rules": {
		"require-atomic-updates": "warn",
		"no-case-declarations": "off",
		"no-empty": "off",
		"no-console": "off",
		"linebreak-style": "off",
		"no-global-assign": "off",
		"prefer-const": "error",
		"no-var": "error",
		"no-unused-vars": "error",
		"no-extra-semi": "error",
		"one-var": [
			"error",
			"never"
		],
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		]
	}
}
